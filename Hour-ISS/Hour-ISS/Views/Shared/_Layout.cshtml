<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css?family=Crimson+Text|Nunito" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>

        <nav class="navbar navbar-light navbar-fixed-bottom bg-faded">
            <button class="navbar-toggler hidden-lg-up" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"></button>
            <div class="collapse navbar-toggleable-md" id="navbarResponsive">
                <a class="navbar-brand" href="#">Hour ISS</a>
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Around the world 16 times a day!", "Index", "Home", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        <a class ="nav-link" href="#introCard">About</a>
                    </li>
                    <li class="nav-item">
                        <a  class ="nav-link" href="#mapCard">See the map</a>
                    </li>
                    <li class="nav-item">
                        <a class ="nav-link"  href="#mediaCard">The ISS on Social Media</a>
                    </li>
                   
                </ul>
            </div>
        </nav>

        @RenderBody()
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
